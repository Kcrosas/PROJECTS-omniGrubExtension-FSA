{
    "name": "OmniGrub",
    "version": "0.1",
    "description": "Takes all displayed search results and does an API call to multiple platforms to add reviews",
    "manifest_version": 2,
    "icons": {
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "css": ["style.css"],
        "js": ["action.js"],
        "matches": ["https://*.doordash.com/store*"]
      }
    ],
    "permissions": ["<all_urls>"],
    "background": {
      "page": "background.html",
      "persistent": false
    }
    
  }